@model List<Contact>

@{
    ViewData["Title"] = "_ViewAll";
}

<table class="table">
    <thead class="thead-light">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MobilePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().JobTitle)
        </th>
        <th>
            <button type="button" class="btn btn-success" onclick="showPopUp('@Url.Action("CreateOrEdit", "Contact", null, Context.Request.Scheme)', 'Create Contact')">Create Contact</button>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var contact in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => contact.Name)
            </td>
            <td>
                @Html.DisplayFor(x => contact.MobilePhone)
            </td>
            <td>
                @Html.DisplayFor(x => contact.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(x => contact.JobTitle)
            </td>
            <td>
                <button type="button" class="btn btn-info" onclick="showPopUp('@Url.Action("CreateOrEdit", "Contact", new {@contactId = contact.ContactId}, Context.Request.Scheme)', 'Edit Contact')">Edit</button>
                <button type="button" class="btn btn-danger" onclick="location.href = '@Url.ActionLink("Delete", "Contact", new {@contactId = contact.ContactId})'">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>